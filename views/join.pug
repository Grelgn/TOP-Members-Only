extends layout 

block content

  h1 #{title}

  form(method="POST") 
    div.form-group
      label(for="secret_code") Secret Code:
      input#secret-code.form-control(type="text" name="secret_code" required)
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
